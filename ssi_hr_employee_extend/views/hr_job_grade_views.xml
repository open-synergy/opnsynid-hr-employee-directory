<odoo>
<record id="hr_job_grade_view_search" model="ir.ui.view">
    <field name="name">hr.job_grade - search</field>
    <field name="model">hr.job_grade</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
            <field name="category_id" />
        </xpath>
    </field>
</record>

<record id="hr_job_grade_view_tree" model="ir.ui.view">
    <field name="name">hr.job_grade -tree</field>
    <field name="model">hr.job_grade</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='code']" position="before">
                <field name="sequence" widget="handle" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="category_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="hr_job_grade_view_form" model="ir.ui.view">
    <field name="name">hr.job_grade - form</field>
    <field name="model">hr.job_grade</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='code']" position="after">
                <field name="sequence" />
                <field name="category_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="hr_job_grade_action" model="ir.actions.act_window">
    <field name="name">Job Grade</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.job_grade</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="hr_job_grade_menu"
        name="Job Grade"
        parent="job_family_modelling_configuration_menu"
        action="hr_job_grade_action"
        sequence="2"
    />

</odoo>
